<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="devchallenge.android.radiotplayer.ui.activity.MainActivity">

    <fragment
        android:name="devchallenge.android.radiotplayer.ui.fragment.MediaPlayerFragment"
        android:id="@+id/player"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <fragment
        android:name="devchallenge.android.radiotplayer.ui.fragment.PodcastsFragment"
        android:id="@+id/podcasts_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>
</LinearLayout>
